{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "./",
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"incremental": true,
		"removeComments": true,
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["./src/**/*.ts", "./src/**/*.json", "./src/**/*.d.ts", ".env"],
	"exclude": [
		"**/*.factory.ts",
		"**/*.seeder.ts",
		"src/database/__generated__",
		"dist/**/*",
		"node_modules",
		"logs",
		"src/**/*.spec.ts",
		"src/**/*.socket.ts",
		"src/**/*.test.ts",
		".adminjs",
		".vscode",
		"mongo-data",
		"public"
	]
}
