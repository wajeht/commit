{
	"name": "commit",
	"description": "generate conventional commits using openai based on git diff",
	"version": "0.0.1",
	"author": "wajeht",
	"license": "MIT",
	"main": "./dist/src/server.js",
	"scripts": {
		"start": "NODE_OPTIONS=--no-deprecation node ./dist/src/server.js",
		"dev": "NODE_OPTIONS=--no-deprecation tsx watch --clear-screen=false ./src/server.ts",
		"build": "NODE_OPTIONS=--no-deprecation tsc",
		"test": "NODE_OPTIONS=--no-deprecation node --import tsx --test ./src/**/*test.ts",
		"test:watch": "NODE_OPTIONS=--no-deprecation node --import tsx --test --watch ./src/**/*test.ts",
		"test:coverage": "NODE_OPTIONS=--no-deprecation node --import tsx --test --experimental-test-coverage ./src/**/*test.ts",
		"lint": "echo 'lint has not implemented yet'",
		"format:check": "NODE_OPTIONS=--no-deprecation prettier --check .",
		"format": "NODE_OPTIONS=--no-deprecation prettier --write ."
	},
	"keywords": [
		"commit",
		"openai",
		"conventional"
	],
	"engines": {
		"node": ">=22.3.0"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"helmet": "^7.1.0",
		"openai": "^4.52.7",
		"typescript": "^5.5.3"
	},
	"devDependencies": {
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.14.10",
		"prettier": "^3.3.2",
		"tsx": "^4.16.2"
	}
}
